rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // ═══════════════════════════════════════════
    // GAMES COLLECTION (read-only for users)
    // ═══════════════════════════════════════════
    match /games/{gameId} {
      allow read: if true;                // Mindenki olvashatja
      allow write: if false;              // Csak admin (n8n sync)
      
      // Ratings subcollection (later implementation)
      match /ratings/{ratingId} {
        allow read: if true;
        allow create: if isAuthenticated()
          && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated()
          && resource.data.userId == request.auth.uid;
      }
      
      // Comments subcollection (later implementation)
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated()
          && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated()
          && resource.data.userId == request.auth.uid;
      }
    }
    
    // ═══════════════════════════════════════════
    // USERS COLLECTION
    // ═══════════════════════════════════════════
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // ═══════════════════════════════════════════
    // FAVORITES COLLECTION
    // ═══════════════════════════════════════════
    match /favorites/{userId} {
      // User csak a saját kedvenceit olvashatja/írhatja
      allow read, write: if isOwner(userId);
    }
    
    // ═══════════════════════════════════════════
    // TRIED GAMES COLLECTION
    // ═══════════════════════════════════════════
    match /tried/{userId} {
      // User csak a saját kipróbált játékait olvashatja/írhatja
      allow read, write: if isOwner(userId);
    }
    
    // ═══════════════════════════════════════════
    // REPORTS COLLECTION
    // ═══════════════════════════════════════════
    match /reports/{reportId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;     // Csak admin
    }
    
    // ═══════════════════════════════════════════
    // RATINGS COLLECTION
    // ═══════════════════════════════════════════
    match /ratings/{ratingId} {
      allow read: if true;                // Mindenki olvashatja
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.stars >= 1
        && request.resource.data.stars <= 5;
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && request.resource.data.stars >= 1
        && request.resource.data.stars <= 5;
      allow delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }
  }
}
